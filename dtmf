#include<avr/io.h>
void main()
{DDRB=0b00011110; DDRD=0b00000000;
while(1)
{ 	int d0=PINB&0b00000001;	int d1=PIND&0b10000000;
	int d2=PIND&0b01000000;	int d3=PIND&0b00100000;

if((d3==0b00000000)&&(d2==0b00000000)&&(d1==0b10000000)&&(d0==0b00000000))
	{PORTB=0b00010100;} //2
if((d3==0b00000000)&&(d2==0b01000000)&&(d1==0b00000000)&&(d0==0b00000000))
	{PORTB=0b00000100;} //4
if((d3==0b00000000)&&(d2==0b01000000)&&(d1==0b10000000)&&(d0==0b00000000))
	{PORTB=0b00010000;}  //6
if((d3==0b00100000)&&(d2==0b00000000)&&(d1==0b00000000)&&(d0==0b00000000))
	{PORTB=0b00001010;}  //8
else{PORTB=0b00000000;}  //else
}
}
